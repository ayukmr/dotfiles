# ===================
# === Git Aliases ===
# ===================

[alias]
	a = add
	p = push
	d = diff
	c = commit
	s = status -s
	l = log -n 20 --oneline

	lg = log
	sh = show
	pl = pull
	rs = reset
	cl = clone
	br = branch
	st = status
	ap = add -p
	hm = heatmap
	pf = push -f
	co = checkout
	ds = diffstat
	sl = shortlog
	cm = commit -m
	lo = log --oneline
	dc = diff --cached

	sth = stash
	cfg = config
	psu = push -u origin
	rao = remote add origin
	rsh = reset --soft HEAD~1
