#!/usr/bin/env zsh

# ==========================
# === Pager for Newsboat ===
# ==========================

# read file
cat $1 |

# convert html to markdown
~/.cfg/newsboat/turndown |

# remove lines from newsboat
tail -n +3 |

# remove blank code blocks
sed -E 's/^(> )+$//' |

# format markdown for viewing
glow -s ~/.cfg/glow/style.json - |

# page output
less -rc
