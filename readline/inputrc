# ================
# === Settings ===
# ================

# disable bell
set bell-style none

# insensitive case
set completion-ignore-case on

# vim keybinds
set editing-mode vi

# show character after files
set visible-stats on

# ================
# === Keybinds ===
# ================

# edit vi-insert keybinds
set keymap vi-insert

# select suggestion
TAB: menu-complete
