#!/usr/bin/env bash

# ====================
# === Yabai Config ===
# ====================

# default to bsp
yabai -m config layout bsp

# window padding
yabai -m config     \
  top_padding    10 \
  bottom_padding 10 \
  left_padding   10 \
  right_padding  10 \
  window_gap     10

# move mouse to focus
yabai -m config mouse_follows_focus on
