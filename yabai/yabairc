#!/usr/bin/env bash

# ====================
# === Yabai Config ===
# ====================

# default to bsp
yabai -m config layout bsp

# window padding
yabai -m config    \
  top_padding    5 \
  bottom_padding 5 \
  left_padding   5 \
  right_padding  5 \
  window_gap     5

# move mouse to focus
yabai -m config mouse_follows_focus on
