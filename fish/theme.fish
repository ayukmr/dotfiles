# ==================
# === Fish Theme ===
# ==================

# ===================
# === Interactive ===
# ===================

# normal text
set fish_color_normal normal

# commands
set fish_color_command purple --bold

# quotes
set fish_color_quote green

# redirection
set fish_color_redirection yellow --bold

# separator characters
set fish_color_end

# errors
set fish_color_error red --bold

# command params
set fish_color_param

# valid paths
set fish_color_valid_path --underline

# comments
set fish_color_comment brblack --italics

# vi mode selection
set fish_color_selection --background=303030

# expansion operators
set fish_color_operator cyan

# character escapes
set fish_color_escape cyan

# completions
set fish_color_autosuggestion brblack

# cancelled code
set fish_color_cancel --underline

# matched history
set fish_color_search_match --background=303030

# history position
set fish_color_history_current --bold

# =============
# === Pager ===
# =============

# normal text
set fish_pager_color_completion normal

# completion descriptions
set fish_pager_color_description yellow --italics

# matched text
set fish_pager_color_prefix blue --bold

# completions progress
set fish_pager_color_progress cyan --bold

# selected completion
set fish_pager_color_selected_background --reverse
