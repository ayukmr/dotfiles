// =====================
// === ESLint Config ===
// =====================

{
  // environment
  "env": {
    "node":    true,
    "es2021":  true,
    "browser": true
  },

  "parserOptions": {
    // latest ecma version
    "ecmaVersion": "latest",

    // treat source as module
    "sourceType": "module"
  },

  // extend recommended config
  "extends": ["eslint:recommended"],

  "rules": {
    // ==============
    // === Unused ===
    // ==============

    "no-unused-vars": "warn",
    "no-unused-labels": "warn",
    "no-unused-expressions": "warn",
    "no-unused-private-class-members": "warn",

    // ===================
    // === Punctuation ===
    // ===================

    // semicolons
    "semi": "warn",

    // curly braces
    "curly": "warn",

    // =================
    // === Variables ===
    // =================

    // let and const
    "no-var": "warn",

    // declare one variable per line
    "one-var": ["warn", "never"],

    // prefer const variables
    "prefer-const": "warn",

    // =============
    // === Style ===
    // =============

    // prefer single quotes
    "quotes": ["warn", "single", { "avoidEscape": true }],

    // camelcase identifiers
    "camelcase": "warn",

    // prefer double quotes in jsx
    "jsx-quotes": "warn",

    // spaced comments
    "spaced-comment": [
      "warn",
      "always",
      { "block": { "balanced": true } }
    ],

    // uncapitalized comments
    "capitalized-comments": ["warn", "never"],

    // spaces inside objects
    "object-curly-spacing": ["warn", "always"],

    // ==============
    // === Syntax ===
    // ==============

    // triple equals
    "eqeqeq": "warn",

    // parentheses around iifes
    "wrap-iife": "warn",

    // dot notation
    "dot-notation": "warn",

    // no extra semicolons
    "no-extra-semi": "warn",

    // no fallthrough for case
    "no-fallthrough": "warn",

    // object shorthands
    "object-shorthand": "warn",

    // no nested ternary expressions
    "no-nested-ternary": "warn",

    // require default params to be last
    "default-param-last": "warn",

    // no unecessary ternary expressions
    "no-unneeded-ternary": "warn",

    // operator assignment shorthands
    "operator-assignment": "warn",

    // no duplicate imports from same module
    "no-duplicate-imports": "warn",

    // prefer arrow callbacks
    "prefer-arrow-callback": "warn",

    // prefer exponentiation operator
    "prefer-exponentiation-operator": "warn"
  }
}
