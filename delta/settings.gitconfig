# ======================
# === Delta Settings ===
# ======================

[delta]
	# four space tabs
	tabs = 4

	# bat syntax theme
	syntax-theme = TwoDark

	# moved arrow
	right-arrow = →

	# file labels
	file-added-label    = +
	file-removed-label  = -
	file-modified-label = ~
	file-copied-label   = =
	file-renamed-label  = →

	# files style
	file-style            = blue bold
	file-decoration-style = blue ul

	# headings style
	commit-decoration-style = yellow ul ol
	hunk-header-style = bold line-number syntax
	hunk-header-decoration-style = box

	# line numbers style
	line-numbers-zero-style  = white
	line-numbers-plus-style  = green bold
	line-numbers-minus-style = red bold

	# changes style
	plus-style       = green bold
	minus-style      = red bold
	plus-emph-style  = black green bold
	minus-emph-style = black red bold
