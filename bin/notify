#!/usr/bin/env osascript

-- =========================
-- === Send Notification ===
-- =========================

on run argv
    set title to ""

    -- get title from args
    repeat with arg in argv
        set title to title & space & arg
    end repeat

    set now to (do shell script "date +%I:%M:%S")
    set fmt to "Sent at " & now

    -- display notification
    display notification (fmt as text) with title title
end run
