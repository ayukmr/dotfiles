#!/usr/bin/env zsh

# ========================
# === Get Mode of File ===
# ========================

if [[ $# < 1 ]]; then
  print -P '%B%F{red}error%f%b: file not given'
  exit 1
fi

if [[ ! -f "$1" && ! -d "$1" ]]; then
  print -P '%B%F{red}error%f%b: file does not exist'
  exit 1
fi

# get modifiers
text="$(ls -l "$1" | sed -E 's/^([^ ]*) .*/\1/')"

# color modifiers
text="$(print -P "$(sed 's/-/%F{8}-%f/g'       <<< "$text")")"
text="$(print -P "$(sed 's/r/%F{yellow}r%f/g'  <<< "$text")")"
text="$(print -P "$(sed 's/w/%F{red}w%f/g'     <<< "$text")")"
text="$(print -P "$(sed 's/x/%F{green}x%f/g'   <<< "$text")")"
text="$(print -P "$(sed 's/d/%F{blue}d%f/g'    <<< "$text")")"
text="$(print -P "$(sed 's/@/%F{magenta}@%f/g' <<< "$text")")"

echo "$text"
