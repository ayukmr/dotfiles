#!/usr/bin/env zsh

# ======================================
# === Find and Replace Text in Files ===
# ======================================

if [[ $# < 2 ]]; then
    print -P '%B%F{red}error%f%b: less than two patterns given'
    exit 1
fi

grep -IrlE -e $1 . | xargs sed -E -i '' -e "s/$1/$2/g"
