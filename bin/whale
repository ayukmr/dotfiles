#!/usr/bin/env zsh

# =============
# === Whale ===
# =============

function line {
    sleep 0.025
    print -P $@
}

line '╭───────────────────────────────────╮'
line '│ %F{4}                                 %f │'
line '│ %F{4}                  ##        .    %f │'
line '│ %F{4}            ## ## ##       ==    %f │'
line '│ %F{4}         ## ## ## ##      =====/ %f │'
line '│ %F{4}     /""""""""""""""""___/  /    %f │'
line '│ %F{4}~~~ {~~ ~~~~ ~~~ ~~~~ ~~ ~ ~~ ~~~%f │'
line '│ %F{4}     \\_____  o          __/      %f │'
line '│ %F{4}      \\    \\         __/         %f │'
line '│ %F{4}        \\____\\______/            %f │'
line '│                                   │'
line '╰───────────────────────────────────╯'
