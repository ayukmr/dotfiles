# ==================
# === Mutt Gmail ===
# ==================

# set name
set realname = $my_name

# fix authentication
set smtp_authenticators = gssapi:login
set smtp_pass = $my_password

# imap credentials
set imap_user = $my_gmail
set imap_pass = $my_password

# mail urls
set smtp_url = smtps://$my_gmail@smtp.gmail.com:465
set folder   = imaps://imap.gmail.com:993

# inbox mailbox
set spoolfile = +INBOX
mailboxes +INBOX

# check mail every 30 secs
set mail_check = 30
