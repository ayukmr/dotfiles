# ===================
# === Atom Config ===
# ===================

'*':
  autosave: {}

  # core settings
  core:
    closeDeletedFileTabs: true
    telemetryConsent: 'no'

    # themes
    themes: [
      'one-dark-ui'
      'one-dark-theme'
    ]

  # editor settings
  editor:
    # font
    defaultFontSize: 12
    fontFamily: 'Iosevka Nerd Font Mono'
    fontSize: 12

    # invisibles
    invisibles: {}
    showIndentGuide: true
    tabLength: 4

  # file icons settings
  'file-icons':
    coloured: false
    onChanges: true
    strategies: {}

  # minimap settings
  minimap:
    displayPluginsControls: false

    # show bookmarks
    plugins:
      bookmarks: true

  # disable wrap guide
  'wrap-guide':
    enabled: false

  # disable welcome on startup
  welcome:
    showOnStartup: false
