# ===================
# === Wget Config ===
# ===================

# retry three times on fail
tries = 3

# sixty second timeout
timeout = 60

# retry on connection refusal
retry_connrefused = on

# server-provided modification date
timestamping = on

# print server response
server_response = on

# don't go up when downloading recursively
no_parent = on

# last component of redirect url as filename
trust_server_names = on

# add extensions depending on format
adjust_extension = on

# follow ftp links in html
follow_ftp = on

# ignore robots.txt
robots = off
