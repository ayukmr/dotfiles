# ===================
# === Wget Config ===
# ===================

# retry three times on fail
tries = 3

# set 60 second timeout
timeout = 60

# retry on connection refusal
retry_connrefused = on

# use server-provided modification date
timestamping = on

# print server response
server_response = on

# don't go up when downloading recursively
no_parent = on

# use last component of redirect url as filename
trust_server_names = on

# add .html to text/html, etc.
adjust_extension = on

# follow ftp links in html
follow_ftp = on

# ignore robots.txt
robots = off
